{
    "$schema": "https://swc.rs/schema.json",
    "sourceMaps": true,
    "module": { "type": "es6", "resolveFully": true },
    "jsc": {
        "target": "es2022",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": { "legacyDecorator": true, "decoratorMetadata": true },
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] }
    },
    "minify": false
}
