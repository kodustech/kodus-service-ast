{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to API",
            "port": 9261,
            "address": "0.0.0.0",
            "sourceMaps": true,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Worker",
            "port": 9260,
            "address": "0.0.0.0",
            "sourceMaps": true,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app"
        }
    ],
    "compounds": [
        {
            "name": "Debug Docker Both",
            "configurations": [
                "Docker: Attach to API",
                "Docker: Attach to Worker"
            ],
            "stopAll": true
        }
    ]
}
