{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Docker API",
            "type": "node",
            "request": "attach",
            "port": 9300,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/src",
            "remoteRoot": "/usr/src/app/src",
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true
        },
        {
            "name": "Debug Docker Worker",
            "type": "node",
            "request": "attach",
            "port": 9301,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/src",
            "remoteRoot": "/usr/src/app/src",
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true
        },
        {
            "name": "Debug Tests in Docker",
            "type": "node",
            "request": "attach",
            "port": 9301,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/test",
            "remoteRoot": "/usr/src/app/test",
            "protocol": "inspector"
        }
    ]
}
