{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [],
        "deleteOutDir": false,
        "watchAssets": true,
        "tsConfigPath": "tsconfig.json",
        "builder": {
            "type": "swc",
            "typeCheck": true,
            "options": {
                "swcrcPath": ".swcrc"
            }
        }
    }
}
